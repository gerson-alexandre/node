<!DOCTYPE html>
<html>

<head>
    <title>
        Hero APP | New
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
     <style>

       body{
         padding-top: 15px;
       }

       img{
         width: 100%;
       }
     </style>
  </head>

<body>
    <div class="container">
       
        <div class="panel panel-danger">
            <div class="card card-title bg-danger text-center">
                <h1>It's Hero Time.</h1>
            </div>
            <div class="card" id="all">

                <% if (message) { %>
                    <div class="alert alert-success" role="alert">
                        <%= message %>
                    </div>
                    <% } %>

                        <a href="/create">
                            <div class="col-xs-6 col-md-2">
                                <div class="card panel-default">
                                    <div class="card-body">
                                        <img src="https://cdn2.iconfinder.com/data/icons/transparent-round-icons/512/add.png">
                                    </div>
                                    <div class="card-footer">
                                        New pokemon
                                    </div>
                                </div>
                            </div>
                        </a>

                        <% pokemon.pokemon.forEach(function(poke){ %>
                            <a href="/view/<%-poke.id %>">
                                <div class="col-xs-6 col-md-2">
                                    <div class="card panel-default">
                                        <div class="card-body">
                                            <img src="<%-poke.image %>">
                                        </div>
                                        <div class="card-footer">
                                            <%-poke.name %>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        <% }); %>
                        
            </div>
            <div class="panel-footer text-center">
                <p>All rights reserved 2020 | Alex G.</p>
            </div>
        </div>
    </div>
</body>

</html>